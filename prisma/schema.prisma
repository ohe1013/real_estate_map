generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Place {
  id            String         @id @default(uuid()) @db.Uuid
  kakaoId       String         @map("kakao_id")
  name          String
  lat           Float
  lng           Float
  address       String?
  roadAddress   String?        @map("road_address")
  userId        String         @map("user_id") @db.Uuid
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime       @default(now()) @map("created_at")
  favorites     Favorite?
  notes         Note[]
  externalLinks ExternalLink[]
  units         Unit[]

  @@unique([userId, kakaoId])
  @@map("places")
}

model Unit {
  id        String   @id @default(uuid()) @db.Uuid
  placeId   String   @map("place_id") @db.Uuid
  place     Place    @relation(fields: [placeId], references: [id], onDelete: Cascade)
  userId    String   @map("user_id") @db.Uuid
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  label     String // e.g. "101-1203"
  dong      String?
  line      String?
  ho        String?
  floor     Int?
  direction String? // e.g. "South", "East"
  viewDesc  String?  @map("view_desc")
  createdAt DateTime @default(now()) @map("created_at")
  notes     Note[]

  @@unique([placeId, label])
  @@map("units")
}

model Favorite {
  id        String   @id @default(uuid()) @db.Uuid
  placeId   String   @unique @map("place_id") @db.Uuid
  place     Place    @relation(fields: [placeId], references: [id], onDelete: Cascade)
  userId    String   @map("user_id") @db.Uuid
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  color     String
  createdAt DateTime @default(now()) @map("created_at")

  @@unique([userId, placeId])
  @@map("favorites")
}

model Template {
  id        String     @id @default(uuid()) @db.Uuid
  userId    String?    @map("user_id") @db.Uuid
  user      User?      @relation(fields: [userId], references: [id])
  title     String
  scope     String     @default("BOTH") // PLACE, UNIT, BOTH
  questions Question[]
  notes     Note[]
  createdAt DateTime   @default(now()) @map("created_at")

  @@map("templates")
}

model Question {
  id            String   @id @default(uuid()) @db.Uuid
  templateId    String   @map("template_id") @db.Uuid
  template      Template @relation(fields: [templateId], references: [id], onDelete: Cascade)
  text          String
  type          String // rating, yesno, multiselect, select, text
  options       Json? // For select/multiselect
  orderIdx      Int      @default(0) @map("order_idx")
  category      String?
  criticalLevel Int      @default(1) @map("critical_level")
  isBad         Boolean  @default(false) @map("is_bad")
  isActive      Boolean  @default(true) @map("is_active")

  required  Boolean  @default(false)
  helpText  String?  @map("help_text")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("template_questions")
}

model Note {
  id         String    @id @default(uuid()) @db.Uuid
  userId     String    @map("user_id") @db.Uuid
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  placeId    String?   @map("place_id") @db.Uuid
  place      Place?    @relation(fields: [placeId], references: [id], onDelete: Cascade)
  unitId     String?   @map("unit_id") @db.Uuid
  unit       Unit?     @relation(fields: [unitId], references: [id], onDelete: Cascade)
  templateId String?   @map("template_id") @db.Uuid
  template   Template? @relation(fields: [templateId], references: [id])
  answers    Json      @default("{}")
  evaluation String?
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")

  @@unique([userId, placeId])
  @@unique([userId, unitId])
  @@map("notes")
}

model ExternalLink {
  id        String   @id @default(uuid()) @db.Uuid
  placeId   String   @map("place_id") @db.Uuid
  place     Place    @relation(fields: [placeId], references: [id], onDelete: Cascade)
  userId    String   @map("user_id") @db.Uuid
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  url       String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("external_links")
}

model User {
  id            String         @id @default(uuid()) @db.Uuid
  name          String?
  email         String?        @unique
  emailVerified DateTime?      @map("email_verified")
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  places        Place[]
  units         Unit[]
  favorites     Favorite[]
  templates     Template[]
  notes         Note[]
  externalLinks ExternalLink[]
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")

  @@map("users")
}

model Account {
  id                String  @id @default(uuid()) @db.Uuid
  userId            String  @map("user_id") @db.Uuid
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid()) @db.Uuid
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id") @db.Uuid
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
